<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                                     android:orientation="vertical">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40px">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/updatephone"
            android:gravity="center"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="26px"
            android:layout_marginLeft="20px"
            android:text="当前手机号:"
            android:textColor="@color/colorHeiSe"
            android:textSize="26px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="26px"
            android:layout_marginLeft="20px"
            android:text="15210816481"
            android:textColor="@color/colorHeiSe"
            android:textSize="26px"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="26px"
        android:layout_marginLeft="20px"
        android:text="更换手机后，下次登录可使用新手机号登录"
        android:textColor="@color/colorHeiSe"
        android:textSize="24px"
        android:layout_marginTop="28px"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新手机号:"
                android:textSize="32px"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="40px"
                android:layout_marginTop="80px"
                android:paddingLeft="20px"
                android:textColor="@color/colorHeiSe"
                />

            <View
                android:layout_width="425px"
                android:layout_height="0px"
                >
            </View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:textSize="20px"
                android:gravity="center"
                android:textColor="@color/fragmenthqyzmzt"
                android:background="@drawable/fragment_my_selector_ju"
                android:layout_marginBottom="36px"
                android:layout_marginTop="100px"
                android:paddingLeft="20px"/>
        </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        >
    </View>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码:"
                android:textSize="32px"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="36px"
                android:layout_marginTop="36px"
                android:layout_marginLeft="20px"
                android:textColor="@color/colorHeiSe"
                />
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        >
    </View>
    <Button
        android:id="@+id/fragement_my_login_atonce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fragmentmyatfinish"
        android:textSize="28px"
        android:gravity="center"
        android:textColor="@color/textsize_my_btn"
        android:background="@drawable/my_button_login_finish"
        android:layout_marginRight="20px"
        android:layout_marginLeft="20px"
        android:layout_marginTop="142px"
        />
</com.zhy.autolayout.AutoLinearLayout>
